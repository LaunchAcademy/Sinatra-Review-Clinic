New Article Page
<br>
<br/>

<% if @error %>
  <%= @error %>
<% end %>

<form action="/articles/new" method="post">
  <label for="article_title">Article Title:</label>
  <input type="text" name="article_title" id="article_title" value="<%= @title  %>">

  <label for="article_url">Article URL:</label>
  <input type="text" name="article_url" id="article_url" value="<%= @url %>">

  <label for="article_description">Article Description:</label>
  <input type="text" name="article_description" id="article_description" value="<%= @description %>">

  <input type="submit" value="Submit Article">
</form>
